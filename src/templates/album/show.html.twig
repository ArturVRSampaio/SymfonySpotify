{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>

            <tr>
                <th>Bands</th>
                {% for band in album.bands %}
                    <p>{{ band }}</p>
                {% endfor %}
            </tr>
            
        </tbody>
    </table>

    <a href="{{ path('album_index') }}">back to list</a>

    <a href="{{ path('album_edit', {'id': album.id}) }}">edit</a>


    {% for music in album.musics %}
        <p>{{ music }}</p>
    {% endfor %}

    {{ include('album/_delete_form.html.twig') }}
{% endblock %}
